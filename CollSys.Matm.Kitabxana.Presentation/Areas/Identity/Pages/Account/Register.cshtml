@page
@model RegisterModel
@{
    ViewData["Title"] = "QEYDİYYAT";
}

<h2 id="caption">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>YENİ İSTİFADƏÇİ YARAT.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="off" required/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="off" required/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" required/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.referenceEmail"></label>
                    <input asp-for="Input.referenceEmail" class="form-control" autocomplete="off" required/>
                    <span asp-validation-for="Input.referenceEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.referenceUserPassword"></label>
                    <input asp-for="Input.referenceUserPassword" class="form-control" autocomplete="new-password" required/>
                    <span asp-validation-for="Input.referenceUserPassword" class="text-danger"></span>
                </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
