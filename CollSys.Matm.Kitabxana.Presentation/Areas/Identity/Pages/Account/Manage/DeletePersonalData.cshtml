@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "PROFİLİ SİL";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 id="caption" style="margin-top:0">@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Profili sildikdə, hesab və hesaba aid bütün məlumatlar qalıcı olaraq silinəcək. Silinən profil və ona aid məlumatların qurtarılması mümkün deyil.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">PROFİL MƏLUMATLARINI SİL VƏ HESABI BAĞLA</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}